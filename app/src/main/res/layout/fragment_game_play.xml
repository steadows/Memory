<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_play_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECCFFF"
    tools:context=".GamePlayFragment">

    <TextView
        android:id="@+id/mem_match_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-black"
        android:text="Memory Match"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#1D4180"
        android:textSize="48sp"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/game_board_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#74264E91"
        app:layout_constraintBottom_toTopOf="@+id/scorecard_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mem_match_title"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/scorecard_view"
        android:layout_width="0dp"
        android:layout_height="118dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#74264E91"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="336dp"
        android:layout_height="312dp"
        app:layout_constraintBottom_toBottomOf="@+id/scorecard_view"
        app:layout_constraintEnd_toEndOf="@+id/game_board_view"
        app:layout_constraintStart_toStartOf="@+id/game_board_view"
        app:layout_constraintTop_toTopOf="@+id/mem_match_title" />

    <TextView
        android:id="@+id/matches_text"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Matches:"
        android:textAlignment="textEnd"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#E6BC3F"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/scorecard_view"
        app:layout_constraintEnd_toEndOf="@+id/scorecard_view"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="@id/scorecard_view"
        app:layout_constraintTop_toTopOf="@+id/scorecard_view"
        app:layout_constraintVertical_bias="0.22" />

    <TextView
        android:id="@+id/time_elapsed_text"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Time Elapsed:"
        android:textAlignment="textEnd"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#E6BC3F"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/scorecard_view"
        app:layout_constraintEnd_toEndOf="@+id/scorecard_view"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="@+id/scorecard_view"
        app:layout_constraintTop_toTopOf="@+id/scorecard_view"
        app:layout_constraintVertical_bias="0.75" />

    <TextView
        android:id="@+id/timer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-black"
        android:text="05:00"
        android:textAllCaps="false"
        android:textColor="#DC287B"
        android:textSize="34sp"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="@+id/scorecard_view"
        app:layout_constraintEnd_toEndOf="@+id/scorecard_view"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toEndOf="@+id/time_elapsed_text"
        app:layout_constraintTop_toTopOf="@+id/scorecard_view"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/score_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-black"
        android:text="10"
        android:textColor="#DC287B"
        android:textSize="34sp"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="@+id/scorecard_view"
        app:layout_constraintEnd_toEndOf="@+id/scorecard_view"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toEndOf="@+id/matches_text"
        app:layout_constraintTop_toTopOf="@+id/scorecard_view"
        app:layout_constraintVertical_bias="0.20999998" />

    <ToggleButton
        android:id="@+id/cardButton"
        android:layout_width="115dp"
        android:layout_height="136dp"
        android:text="ToggleButton"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="181dp" />

</androidx.constraintlayout.widget.ConstraintLayout>